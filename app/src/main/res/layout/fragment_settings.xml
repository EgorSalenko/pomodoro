<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent" android:layout_height="match_parent"
              android:orientation="vertical">

    <TextView
            style="@style/TextAppearance.AppCompat.Caption"
            android:id="@+id/textTimerWork"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_large"
            android:text="@string/text_work_timer"/>

    <androidx.appcompat.widget.AppCompatSeekBar
            android:id="@+id/seekbarTimerWork"
            android:max="30"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_large"/>

    <TextView
            style="@style/TextAppearance.AppCompat.Caption"
            android:id="@+id/textTimerPause"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_large"
            android:text="@string/text_pause_timer"/>

    <androidx.appcompat.widget.AppCompatSeekBar
            android:id="@+id/seekbarTimerPause"
            android:layout_width="match_parent"
            android:max="20"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_large"/>

    <TextView
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:id="@+id/btnCategories"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:text="@string/text_categories"/>

    <com.google.android.material.button.MaterialButton
            style="@style/Widget.MaterialComponents.Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_margin="@dimen/margin_large"
            app:icon="@drawable/ic_round_clear_24px"
            android:text="@string/btn_text_clear_all_data"/>

</LinearLayout>
