<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
		xmlns:android="http://schemas.android.com/apk/res/android"
		xmlns:app="http://schemas.android.com/apk/res-auto"
		android:layout_width="match_parent" android:layout_height="match_parent">

	<LinearLayout
			android:id="@+id/ll_activity_settings_1"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintTop_toTopOf="parent"
			android:orientation="horizontal">

		<TextView
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_weight="1"
				android:text="Work timer duration"/>

		<Spinner
				android:id="@+id/spinner_fragment_settings_work_timer"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_weight="3"/>

	</LinearLayout>

	<LinearLayout
			android:id="@+id/ll_activity_settings_2"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintTop_toBottomOf="@id/ll_activity_settings_1"
			android:orientation="horizontal">

		<TextView
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_weight="1"
				android:text="Short pause timer duration"/>

		<Spinner
				android:id="@+id/spinner_fragment_settings_short_pause_timer"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_weight="3"/>

	</LinearLayout>

	<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintTop_toBottomOf="@id/ll_activity_settings_2"
			android:orientation="horizontal">

		<TextView
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_weight="1"
				android:text="Long pause timer duration"/>

		<Spinner
				android:id="@+id/spinner_fragment_settings_long_pause_timer"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_weight="3"/>

	</LinearLayout>

	<com.google.android.material.floatingactionbutton.FloatingActionButton
			android:id="@+id/fab_activity_settings_save"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintBottom_toBottomOf="parent"
	/>

</androidx.constraintlayout.widget.ConstraintLayout>
